@page
@model SODP.UI.Areas.Projects.Pages.IndexModel
@{
    ViewData["Title"] = "Lista projektów";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">@ViewData["Title"]</h2>
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-3">
            <a role="button" class="btn btn-info form-control text-white" asp-area="Projects" asp-page="Create">Nowy projekt</a>
        </div>
    }


    <div class="col-12" style="text-align:center">
        <br />
        <span class="h4 text-info">TABELA</span>
        <br />
    </div>

    <div class="col-12">
        <table id="ProjectDataTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Numer</th>
                    <th>Stadium</th>
                    <th>Tytuł</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    <div class="col-12 p-3 mt-3">
        <form method="post">
            @if (@Model.ErrorMessage.Length > 0)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h4 class="alert-heading">Błąd</h4>
                    <p>@Model.ErrorMessage</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (Model.Projects.Data.Collection.Count() > 0)
            {
                <table class="table table-sm table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Numer</th>
                            <th>Stadium</th>
                            <th>Tytuł</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model.Projects.Data.Collection.AsEnumerable())
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => project.Number)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => project.StageSign)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => project.Title)
                                </td>
                                <td>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <div class="row group justify-content-end m-0">
                                            <div>
                                                <a role="button" class="btn btn-sm btn-info text-white mb-0 mt-0 ml-1 mr-1 p-1" asp-page="Edit"
                                                   asp-route-id="@project.Id">Edycja</a>
                                            </div>
                                            <div>
                                                <button asp-page-handler="Delete" asp-route-id="@project.Id"
                                                        onclick="return confirm('Czy na pewno skasować?')"
                                                        class="btn btn-sm btn-danger mb-0 mt-0 ml-1 mr-1 p-1">
                                                    Usuń
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> Lista projektów jest pusta</p>
            }
        </form>
    </div>

</div>

@section Scripts{
    <script src="~/js/projectList.js"></script>
}