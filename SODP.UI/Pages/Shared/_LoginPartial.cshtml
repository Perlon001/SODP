@using Microsoft.AspNetCore.Identity
@using SODP.Model
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white-50" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj <b class="text-white">@User.Identity.Name</b></a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-white-50">Wyloguj</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white-50" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
    </li>
}
</ul>
