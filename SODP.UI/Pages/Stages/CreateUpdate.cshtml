@page
@model SODP.UI.Pages.Stages.CreateUpdateModel
@{
}


<br />
<div class="container row p-0 m-0">
    <div class="col-8">
        <h2 class="text-info">@(Model.Input.Id == 0 ? "Nowe stadium" : "Edycja stadium")</h2>
    </div>
</div>
<div class="border container" style="padding:30px;">
    @if (Model.ErrorMessage != "")
    {
        <div class="text-danger">
            @Model.ErrorMessage
        </div>
    }
    <form method="post">
        <input type="hidden" asp-for="Input.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="Input.Sign" class="form-control" readonly="@(Model.Input.Sign == null ? false : true)" placeholder="Symbol stadium" />
            </div>
            <span asp-validation-for="Input.Sign" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="Input.Title" class="form-control" placeholder="Tytuł stadium" />
            </div>
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <partial name="_SubmitAndBackButtonPartial" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}