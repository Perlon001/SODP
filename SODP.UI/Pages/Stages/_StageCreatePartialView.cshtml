@model StageDTO

<!-- Modal -->
<div id="stage-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="stage-modal-header" class="text-info">Nowe stadium</h2>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form method="post">
                <div>
                    @Html.HiddenFor(m => m.Id)
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-6">
                            <input asp-for="Sign" class="form-control" readonly="@(Model.Id == 0 ? false : true)" placeholder="Symbol stadium" />
                        </div>
                        <span asp-validation-for="Sign" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <input asp-for="Title" class="form-control" placeholder="Tytuł stadium" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary form-control" data-save="modal">Zapisz</button>
                    <button type="button" class="btn btn-success form-control" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>